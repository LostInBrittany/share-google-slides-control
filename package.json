{
  "name": "shared-slide-control",
  "version": "1.0.0",
  "description": "A tool to share the control of web slides",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint ./src --ext .ts,.tsx",
    "clean": "rm -Rf node_modules/ dist/",
    "build": "npm run buildAPI & npm run buildFrontend",
    "buildAPI": "tsc",
    "buildFrontend": "cd frontend && npm install && npm run build",
    "watch": "tsc --watch",
    "prepare": "rm -Rf dist/ && npm run build",
    "start": "npm run prepare && node dist/index.js"
  },
  "author": "Horacio Gonzalez <horacio.gonzalez@gmail.com>",
  "license": "ISC",
  "engines": {
    "node": "^20"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/node": "^20.11.17",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.11",
    "rollup-plugin-copy": "^3.5.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@clevercloud/components": "^15.0.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "mongodb": "^6.3.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^10.0.0",
    "ws": "^8.18.0",
    "yaml": "^2.3.4"
  }
}
